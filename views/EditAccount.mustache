{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <h1 class="text-center"> Chỉnh sửa thông tin tài khoản</h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form class="bootstrap-form-with-validation" method="post">
                {{#employee}}
                    {{#hasMes}}
                        <div class="alert alert-success">
                            {{mess}}
                        </div>
                    {{/hasMes}}
                <div class="form-group">
                    <label class="control-label" for="text-input">Tên hiển thị</label>
                    <input class="form-control" type="text" name="DisplayName" value="{{DisplayName}}" id="text-input">
                </div>
                <div class="form-group">
                    <label class="control-label" for="text-input">Tên đăng nhập</label>
                    <input class="form-control" type="text" name="UserName" value="{{UserName}}" id="password-input">
                </div>
                <div class="form-group">
                    <label class="control-label" for="password-input">Mật khẩu</label>
                    <input class="form-control" type="password" name="PassWord" id="password-input">
                </div>
                <input type="hidden" name="id" value="{{Id}}">
                <div class="form-group">
                    <button class="btn btn-info" type="submit">Chỉnh sửa </button>
                </div>
                {{/employee}}
            </form>
        </div>
    </div>
</body>

{{> bottom}}