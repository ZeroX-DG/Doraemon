{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    {{^history}}
    <h1 class="text-center">Đơn hàng đang chờ</h1>
    {{/history}}
    {{#history}}
    <h1 class="text-center">Đơn hàng đã giao</h1>
    {{/history}}
    <!--Tools-->
    <a class="btn btn-info" role="button" href="{{base_path}}/ships/add">Thêm hóa đơn hàng</a>
    <a class="btn btn-primary" role="button" href="{{base_path}}/ships/search">Tìm kiếm đơn hàng</a>
    {{^history}}
    <a class="btn btn-success" role="button" href="{{base_path}}/ships/history">Các đơn đã giao</a>
    {{/history}}
    {{#history}}
    <a class="btn btn-success" role="button" href="{{base_path}}/ships">Các đơn đang chờ</a>
    {{/history}}
    <br>
    <br>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Địa chỉ</th>
                    <th>Số ly</th>
                    <th>Người giao</th>
                    <th>Khoảng cách</th>
                    <th>Số điện thoại</th>
                    <th>Giá đơn hàng</th>
                    <th>Giá ship</th>
                    {{^history}}
                    <th>Thao tác</th>
                    {{/history}}
                </tr>
            </thead>
            <tbody>
                {{#ships}}
                <tr>
                    <td>{{Address}}</td>
                    <td>{{Amount}}</td>
                    <td>{{Shipper}}</td>
                    <td>{{Distance}}</td>
                    <td>{{Phone}}</td>
                    <td>{{Total}}</td>
                    <td>{{ShipPrice}}</td>
                    {{^history}}
                    <td>
                        <button class="btn btn-success" data-id="{{Id}}" data-target="#doneShipModal" data-toggle="modal" type="button">Xác nhận</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a class="btn btn-primary" href="{{base_path}}/ships/edit/{{Id}}">Chỉnh sửa</a>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <button class="btn btn-danger" data-id="{{Id}}" data-target="#cancelShipModal" data-toggle="modal" type="button">Hủy</button>
                    </td>
                    {{/history}}
                </tr>
                {{/ships}}
            </tbody>
        </table>
    </div>
    <div id="cancelShipModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Bạn có chắc ?</h4>
                </div>
                <div class="modal-body">
                    <p>Bạn có muốn hủy đơn hàng này ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger cancelShip" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-info" data-dismiss="modal">Thôi không hủy</button>
                </div>
            </div>
        </div>
    </div>
    <div id="doneShipModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Bạn có chắc ?</h4>
                </div>
                <div class="modal-body">
                    <p>Bạn có muốn xác nhận đơn hàng đã được giao ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger acceptShip" data-dismiss="modal">Xác nhận</button>
                    <button type="button" class="btn btn-info" data-dismiss="modal">Thôi không xác nhận</button>
                </div>
            </div>
        </div>
    </div>
</body>
{{> bottom}}