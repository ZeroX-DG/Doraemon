{{> head}}
<body>
  {{#isAdmin}}
  {{> AdminNav}}
  {{/isAdmin}}
  {{^isAdmin}}
  {{> EmployeeNav}}
  {{/isAdmin}}
  <div>
    <div class="col-md-12 text-center">
      <h3>Lịch làm việc ngày thứ {{dayOfWeek}} ({{date}}/{{month}})</h3>
    </div>
    
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td rowspan="2">Tên nhân viên</td>
            <td rowspan="2">Tổng số giờ làm việc</td>
            <td colspan="{{shiftCount}}" class="text-center">Các ca làm việc</td>
          </tr>
          <tr>
            {{#shifts}}
            <td>{{Name}} <br> ({{Time_start}} -> {{Time_end}})</td>
            {{/shifts}}
          </tr>
        </thead>
        <tbody>
          {{#data}}
          <tr>
            <td>{{user.DisplayName}}</td>
            <td>{{AttendanceHour}}</td>
            {{#checkState}}
              {{#state}}
              <td><input type="checkbox" class="scheduleShift" data-scheduleid="{{scheduleId}}" data-date="{{dayOfWeek}}" data-userid="{{user.Id}}" data-shiftid="{{id}}" checked></td>
              {{/state}}
              {{^state}}
              <td><input type="checkbox" class="scheduleShift" data-scheduleid="{{scheduleId}}" data-date="{{dayOfWeek}}" data-userid="{{user.Id}}" data-shiftid="{{id}}"></td>
              {{/state}}
            {{/checkState}}
          </tr>
          {{/data}}
        </tbody>
      </table>
  </div>
</body>
