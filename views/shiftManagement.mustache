{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <h1 class="text-center">Quản lý các loại ca</h1>
    <button class="btn btn-info">Thêm ca</button>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên ca</th>
                    <th>Thời gian bắt đầu</th>
                    <th>Thời gian kết thúc</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#shifts}}
                <tr>
                    <td>{{Name}}</td>
                    <td>{{Time_start}}</td>
                    <td>{{Time_end}}</td>
                    <td>
                        <button class="btn btn-danger" data-id="{{Id}}" data-toggle="modal" data-target="#deleteShiftModal">Xóa</button>
                        <a class="btn btn-info" href="{{base_path}}/shifts/edit/{{Id}}">Chỉnh sửa</a>
                    </td>
                </tr>

                {{/shifts}}
            </tbody>
        </table>
        <div class="modal fade" id="deleteShiftModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Xóa ca này ?</h4>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn xóa ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger shiftDelBtn" data-dismiss="modal">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="cannotdelete" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Không thể xóa ca !</h4>
                    </div>
                    <div class="modal-body">
                        <p>Không thể xóa vì đang có nhân viên dùng ca này</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{{> bottom}}