{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <div class="container">
    	<div class="row">
    		<div class="col-md-6 col-md-offset-3">
    			<form method="get" class="bootstrap-form-with-validation">
    				<div class="form-group">
						<label for="address">Địa chỉ</label>
	    				<input type="text" class="form-control" name="address" id="address"/>
	    			</div>
    				<br>
    				<div class="form-group">
						<label for="shipper">Người giao</label>
	    				<input type="text" class="form-control" name="shipper" id="shipper"/>
	    			</div>
	    			<br>
	    			<div class="form-group">
						<label for="distance">Khoảng cách</label>
	    				<input type="text" class="form-control" name="distance" id="distance"/>
	    			</div>
	    			<br>
	    			<div class="form-group">
						<label for="phone">Số điện thoại</label>
	    				<input type="text" class="form-control" name="phone" id="phone"/>
	    			</div>
	    			<div class="form-group">
	    				<input type="submit" class="btn btn-info"/>
	    			</div>
    			</form>
    		</div>
    	</div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Địa chỉ</th>
                    <th>Số ly</th>
                    <th>Người giao</th>
                    <th>Khoảng cách</th>
                    <th>Số điện thoại</th>
                    <th>Giá đơn hàng</th>
                    <th>Giá ship</th>
                    {{^history}}
                    <th>Thao tác</th>
                    {{/history}}
                </tr>
            </thead>
            <tbody>
                {{#ships}}
                <tr>
                    <td>{{Address}}</td>
                    <td>{{Amount}}</td>
                    <td>{{Shipper}}</td>
                    <td>{{Distance}}</td>
                    <td>{{Phone}}</td>
                    <td>{{Total}}</td>
                    <td>{{ShipPrice}}</td>
                    {{^history}}
                    <td>
                        <button class="btn btn-success" data-id="{{Id}}" data-target="#doneShipModal" data-toggle="modal" type="button">Xác nhận</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <a class="btn btn-primary" href="{{base_path}}/ships/edit/{{Id}}">Chỉnh sửa</a>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <button class="btn btn-danger" data-id="{{Id}}" data-target="#cancelShipModal" data-toggle="modal" type="button">Hủy</button>
                    </td>
                    {{/history}}
                </tr>
                {{/ships}}
            </tbody>
        </table>
    </div>
</body>
{{> bottom}}