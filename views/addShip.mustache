{{> head}}
<body>
    {{#isAdmin}}
    {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
    {{> EmployeeNav}}
    {{/isAdmin}}
    <h1 class="text-center">Thêm đơn giao hàng</h1>
    <div class="container">
        <form method="POST">
            <div class="row">
                <div class="col-md-6">

                    <h4>Địa chỉ giao hàng:</h4>
                    <input class="form-control" name="address" type="text">
                    
                </div>
                <div class="col-md-6">

                    <h4>Số điện thoại:</h4>
                    <input class="form-control" name="phone" type="text">
                    
                </div>
                <div class="col-md-6">

                    <h4>Giá tiền đơn hàng:</h4>
                    <input class="form-control" onkeyup="addCommas(this)" name="total" type="text">
                    
                </div>
                <div class="col-md-6">

                    <h4>Phí ship:</h4>
                    <select name="ShipPrice" class="form-control">
                        <option value="5000">5,000</option>
                        <option value="10000">10,000</option>
                        <option value="15000">15,000</option>
                    </select>
                    
                </div>
                <div class="col-md-6">

                    <h4>Số ly:</h4>
                    <input class="form-control" name="amount" type="text">
                    
                </div>
                <div class="col-md-6">

                    <h4>Km:</h4>
                    <input class="form-control" name="distance" type="text">
                    
                </div>
                <div class="col-md-12">

                    <h4>Người giao:</h4>
                    <select name="shipper" id="" class="form-control">
                        {{#employees}}
                        <option value="{{Id}}">{{DisplayName}}</option>
                        {{/employees}}
                    </select>
                    
                </div>
            </div>
            <br>
            <button class="btn btn-success btn-lg" type="submit">Thêm đơn hàng</button>
            <a href="{{base_path}}/ships" class="btn btn-primary btn-lg">Quay lại</a>
        </form>
    </div>
</body>
{{> bottom}}