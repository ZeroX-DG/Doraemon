{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form class="bootstrap-form-with-validation" method="post">
                <h2 class="text-center">Thêm sản phẩm vào kho</h2>
                {{#message}}
                <div class="alert alert-danger">
                  {{message}}
                </div>
                {{/message}}
                <div class="form-group">
                    <label class="control-label" for="name">Tên sản phẩm</label>
                    <input class="form-control" type="text" name="name" id="name">
                </div>
                <div class="form-group">
                    <label class="control-label" for="price">đơn giá</label>
                    <input class="form-control" type="number" onkeyup="oneDot(this)" name="price" id="price">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</body>
{{> bottom}}