{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <div class="container">
    	<h3>Lịch sử chấm công</h3>
    	<h3>Nhân viên: {{DisplayName}}</h3>
    	<table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="text-center">Ngày</th>
                    <th class="text-center">Giờ</th>
                    <th class="text-center">Tên Ca</th>
                    <th class="text-center">Thời gian ca</th>
                </tr>
            </thead>
            <tbody>
            	{{#attendances}}
            		<tr>
            			<td class="text-center">{{Date}}</td>
            			<td class="text-center">{{Time}}</td>
            			<td class="text-center">{{ShiftName}}</td>
            			<td class="text-center">{{ShiftTime}}</td>
            		</tr>
            	{{/attendances}}
            </tbody>
        </table>
    </div>
</body>
