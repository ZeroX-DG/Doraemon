{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0">
                <h1 class="text-center">Quản lý tài khoản</h1></div>
            <div class="col-md-12"><a class="btn btn-success" role="button" href="{{base_path}}/account/add">Thêm tài khoản</a></div>
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Tên Đăng Nhập</th>
                                <th>Tên hiển thị</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#employee}}
                            <tr>
                                <td>{{UserName}}</td>
                                <td>{{DisplayName}}</td>
                                <td>
                                    <a class="btn btn-success" name="btnfix" type="button" href="{{base_path}}/account/edit/{{Id}}">Sửa </a>
                                    <button class="btn btn-danger" data-id="{{Id}}" data-toggle="modal" data-target="#deleteAccountModal" >Xóa </button>
                                </td>
                            </tr>
                            {{/employee}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal fade" id="cannotdelete" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Không thể xóa nhân viên !</h4>
                    </div>
                    <div class="modal-body">
                        <p>Không thể xóa nhân viên !</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="deleteAccountModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Xóa nhân viên này ?</h4>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn xóa ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger deleteAccountBtn" data-dismiss="modal">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
{{> bottom}}
