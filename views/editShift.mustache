{{> head}}
<body>
    {{#isAdmin}}
        {{> AdminNav}}
    {{/isAdmin}}
    {{^isAdmin}}
        {{> EmployeeNav}}
    {{/isAdmin}}
    <h1 class="text-center">Chỉnh sửa ca</h1>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form class="bootstrap-form-with-validation" method="post">
                {{#shift}}
                <div class="form-group">
                    <label class="control-label" for="text-input">Tên ca</label>
                    <input class="form-control" type="text" value="{{Name}}" name="name" id="text-input">
                </div>
                <div class="form-group bootstrap-timepicker timepicker">
                    <label class="control-label" for="time_start">Thời gian bắt đầu</label>
                    <input id="time_start" name="time_start" value="{{Time_start}}" type="text" class="form-control input-small time">
                </div>
                <div class="form-group bootstrap-timepicker timepicker">
                    <label class="control-label" for="time_end">Thời gian kết thúc</label>
                    <input id="time_end" name="time_end" type="text" value="{{Time_end}}" class="form-control input-small time">
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Lưu </button>
                </div>
                {{/shift}}
            </form>
        </div>
    </div>
</body>
{{> bottom}}